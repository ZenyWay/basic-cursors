{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
			"inferno"
    ],
		"jsx": "react",
		"jsxFactory": "createElement",
    "declaration": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "importHelpers": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "spec",
    "typings"
  ]
}
